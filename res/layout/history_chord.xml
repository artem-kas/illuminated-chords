<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:paddingLeft="@dimen/chord_list_child_padding"
	android:paddingTop="@dimen/chord_list_item_padding"
	android:paddingRight="@dimen/chord_list_item_padding"
	android:paddingBottom="@dimen/chord_list_item_padding">

	<TextView
		android:id="@+id/titleText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/chord_list_title_text_size" />

	<TextView
		android:id="@+id/authorText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:textSize="@dimen/chord_list_title_author_size"
		android:textColor="@color/list_secondary_text"/>

</LinearLayout>
